{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true, // use esbuild
    "moduleResolution": "bundler",
    "types": ["obs-studio"],
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "newLine": "lf",
    // "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "f"
  }
}
